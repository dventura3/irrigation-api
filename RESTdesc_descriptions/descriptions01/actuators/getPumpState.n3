@prefix vocab: <http://www.example.org/vocab#>.
@prefix http: <http://www.w3.org/2011/http#>.
@prefix st: <http://www.mystates.org/states#>.
@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix iot: <https://iotdb.org/pub/iot#>.
@prefix iot-attribute: <https://iotdb.org/pub/iot-attribute#>.

{
  ?pump a vocab:IrrigationPump;
      iot:uuid ?id.
      
  ?state a st:State;
      log:includes { ?pump iot-attribute:on ?value. }.
}
=>
{
  _:request http:methodName "GET";
            http:requestURI ("/actuators/" ?id);
            http:response [http:body ?pump].

  ?pump iot:uuid ?id;
        iot:name ?name;
        iot:description ?desc;
        iot-attribute:on ?value.
}.