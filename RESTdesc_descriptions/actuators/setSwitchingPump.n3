@prefix vocab: <http://www.example.org/vocab#>.
@prefix http: <http://www.w3.org/2011/http#>.
@prefix st: <http://www.mystates.org/states#>.
@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix iot: <https://iotdb.org/pub/iot#>.
@prefix iot-attribute: <https://iotdb.org/pub/iot-attribute#>.


{
  ?pump a vocab:IrrigationPump;
      iot:uuid ?id.
      
  ?state a st:State;
      log:includes { ?pump iot-attribute:on ?oldValue. }.

  ?newSwitching a iot:Purpose;
      iot-attribute:on ?newValue.
}
=>
{
  _:request http:methodName "PUT";
            http:body ?newSwitching;
            http:requestURI ("/actuators/" ?id);
            http:response [http:body ?pump].

  [ a st:StateTransition;
    st:typeOperation "replacement";
    st:oldComponent { ?pump iot-attribute:on ?oldValue. };
    st:newComponent { ?pump iot-attribute:on ?newSwitching. };
    st:originalState ?state
  ].

  ?pump iot:uuid ?id;
        iot:name ?name;
        iot:description ?desc;
        iot-attribute:on ?newSwitching.
}.