/*
*   Example of a GET request to "http://www.irrigation.org/api/sensors/temperature/001/" URL.
*   I've tried to use the iotdb.org vocabulary to express the concepts related to the properties that
*   a temeprature sensors could have.
*   Usefull links to iotdb.org vocabulary:
*   1) https://iotdb.org/social/iotdb/
*   2) https://iotdb.org/dpjanes/models/smart-things-temperature
*   3) https://iotdb.org/pub/
*   4) https://medium.com/@dpjanes/a-language-for-sensors-layer-1-242a8dd4e77b
*/

{
  "@context" : {
    "iot" : "https://iotdb.org/pub/iot#",
    "iot-attribute" : "https://iotdb.org/pub/iot-attribute#",
    "iot-unit" : "https://iotdb.org/pub/iot-unit#",
    "vocab" : "http://www.example.org/vocab#",
    "sensorID" : "iot:uuid",
    "sensorName" : "iot:name",
    "sensorDescription" : "iot:description",
    "sensorValue" : { 
      "@id" : "iot-attribute:sensor.temperature",
      "@type" : "iot:number"
    },
    "sensorUnit" : "iot:unit",
    "timestamp" : "iot:datetime"
  },
  "@id" : "/sensors/temperature/001/",
  "@type" : "vocab:TemperatureSensor",
  "sensorID" : "001",
  "sensorName" : "Sensor of Temperature",
  "sensorDescription" : "This sensor measures the temperature in the environment",
  "sensorValue" : 25,
  "sensorUnit" : "iot-unit:temperature.si.celsius",
  "timestamp" : "2015-04-04T16:06Z"
}